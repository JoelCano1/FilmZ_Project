<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:orientation="horizontal">

    <!--PERSONATGE QUE ETS + BUTTONS-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <!--PERSONATGE-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">
            <!--IMATGE PERSONATGE-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center">
                <ImageView
                    android:id="@+id/ImgPersonatge"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/login"
                    android:layout_marginTop="25dp"/>
            </LinearLayout>
            <!--NOM USER-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="NOM USUARI"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
            <!--DESCRIPCIO-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:padding="30dp"
                    android:background="@drawable/button_redondejat"
                    android:text="Lorem ipsum dolor sit amet, \nconsectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolor \nquis n AAHAJSDAJSHDJASHD asdjksddsskjk FIN"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!--BUTTONS-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <!--BUTTON RANKING-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/BtnRanking"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button_redondejat"
                    android:text="RANKING"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="30dp"/>
            </LinearLayout>
            <!--BUTTON CONTINUE-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/BtnContinuar"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button_redondejat"
                    android:text="CONTINUAR"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="30dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--STATS PARTIDA (LLISTA)-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">
        <!--TEXT STATS-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="100dp"
                android:text="ESTADÍSTIQUES"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
        <!--TEXT NUM ENCERTS-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:background="@drawable/text_encerts"
                android:text="18/20"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="40dp"/>
        </LinearLayout>
        <!--CAPÇALS LLISTA-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CATEGORIA"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ENCERTS"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"/>
        </LinearLayout>
        <!--LLISTA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <ListView
                android:id="@+id/LstStats"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>