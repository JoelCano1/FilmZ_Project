<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!--PERSONATGE QUE ETS + BUTTONS-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <!--PERSONATGE-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">
            <!--IMATGE PERSONATGE-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center">
                <ImageView
                    android:id="@+id/ImgPersonatge"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/login"
                    android:layout_marginTop="25dp"/>
            </LinearLayout>
            <!--NOM USER-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NOM USUARI"
                    style="@style/resultScreenSubtitolsNom"/>
            </LinearLayout>
            <!--DESCRIPCIO-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/LblDescPersonatge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:padding="30dp"
                    android:background="@drawable/boton_redondselct"
                    android:fontFamily="@font/quicksand"
                    android:text="Lorem ipsum dolor sit amet, \nconsectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolor \nquis n AAHAJSDAJSHDJASHD asdjksddsskjk FIN"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!--BUTTONS-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <!--BUTTON RANKING-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/BtnRankingResult"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:text="@string/result_screen_btnRanking"
                    style="@style/resultScreenButtons"/>
            </LinearLayout>
            <!--BUTTON CONTINUE-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/BtnContinuarResult"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:text="@string/result_screen_btnContinuar"
                    style="@style/resultScreenButtons"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--STATS PARTIDA (LLISTA)-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">
        <!--TEXT STATS-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/result_screen_txtEstadistiques"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:fontFamily="@font/mavenpro"
                android:textStyle="bold"/>
        </LinearLayout>
        <!--TEXT NUM ENCERTS-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:background="@drawable/text_encerts"
                android:text="18/20"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="40dp"/>
        </LinearLayout>
        <!--CAPÃ‡ALS LLISTA-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/result_screen_txtCategoria"
                style="@style/resultScreenSubtitolsNom"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/result_screen_txtEncerts"
                style="@style/resultScreenSubtitolsNom"/>
        </LinearLayout>
        <!--LLISTA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    style="@style/resultScreenTextGeneres"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/result_screen_txtGenereDrama"/>
                <TextView
                    style="@style/resultScreenTextGeneres"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/result_screen_txtGenereTerror"/>
                <TextView
                    style="@style/resultScreenTextGeneres"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/result_screen_txtGenereAnimacio"/>
                <TextView
                    style="@style/resultScreenTextGeneres"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/result_screen_txtGenereAccio"/>
                <TextView
                    style="@style/resultScreenTextGeneres"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/result_screen_txtGenereCienciaFiccio"/>
            </LinearLayout>
            <ListView
                android:id="@+id/LstStats"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>