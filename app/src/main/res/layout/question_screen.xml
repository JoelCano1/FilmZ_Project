<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/categoria"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="Drama"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        android:fontFamily="@font/lora"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
            <ProgressBar
                android:id="@+id/ProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="850dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_progressbar"
                android:scaleY="1.05"

                />

        <TextView
            android:id="@+id/timePreg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="425dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/lora"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="415dp"

            android:backgroundTint="@color/white" />

        </RelativeLayout>


    <FrameLayout
        android:layout_width="878dp"
        android:layout_height="150dp"
        android:background="@drawable/image"
        android:layout_gravity="center"
        android:fontFamily="@font/lora"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/question"
            android:layout_width="850dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="¿Que limpia LaRusso cuando el señor Miyagi le dice la famosa frase dar cera, pulir cera?"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/lora" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginTop="26dp"
        >
    <Button
        android:id="@+id/respuesta1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Renai encontró un mensaje escrito con sangre en la hoja de Dalton."
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="23dp"
        android:fontFamily="@font/lora"
        android:textStyle="bold"


        android:background="@drawable/boton_redondeado"

        />

    <Button
        android:id="@+id/respuesta2"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Renai encontró una huella de una mano ensangrentada en la sábana de Dalton."
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="23dp"
            android:background="@drawable/boton_redondeado"
            android:fontFamily="@font/lora"
            android:textStyle="bold"
        />

    <Button
        android:id="@+id/respuesta3"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Renai encontró un oso de peluche destrozado debajo de las sábanas de Dalton."
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="23dp"
        android:background="@drawable/boton_redondeado"
        android:fontFamily="@font/lora"
        android:textStyle="bold"
        />
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal">

<TextView
    android:id="@+id/numPreg"
    android:layout_width="200dp"
    android:layout_height="80dp"
    style="@style/resultScreenButtons"
    android:textColor="@color/black"
    android:textSize="35sp"
    android:textStyle="bold"
    android:fontFamily="@font/lora"
    android:gravity="center"
    android:layout_marginLeft="18dp"
    android:layout_marginTop="28dp"

    />
    <ImageButton
        android:id="@+id/nextQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/nextbut"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="596dp"
        />

    <ImageButton
        android:id="@+id/validateQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="596dp"
        android:layout_marginTop="19dp"
        android:background="@android:color/transparent"
        android:src="@drawable/validarbut2" />



</RelativeLayout>
    

</LinearLayout>