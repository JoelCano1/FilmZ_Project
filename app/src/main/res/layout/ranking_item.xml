<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rankingElement"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="62dp"
        android:background="@drawable/rankingpos"
        android:layout_marginRight="30dp"
        android:paddingBottom="7dp"
        android:paddingLeft="46dp">

        <TextView
            android:id="@+id/rankingPosition"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:paddingTop="0dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="46sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txtRanking"
        android:layout_width="800dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:background="@drawable/rankinginfofirst"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNomJugadorRanking"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nom Jugador"
            android:fontFamily="@font/quicksand"
            android:padding="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="28sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtPuntuacioRanking"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Puntuacio"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/quicksand"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:textSize="28sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtDificultatRanking"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Dificultat"
            android:gravity="center"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:textSize="28sp"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>
