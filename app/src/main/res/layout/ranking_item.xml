<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rankingElement"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">
    <TextView
        android:id="@+id/rankingPosition"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/rankingpos"
        android:gravity="center"
        android:text="1"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="46sp"
        android:layout_marginRight="30dp"/>
    <LinearLayout
        android:id="@+id/txtRanking"
        android:layout_width="800dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:background="@drawable/rankinginfofirst"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNomJugadorRanking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom Jugador"
            android:padding="10dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textSize="28sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtPuntuacioRanking"
            android:layout_width="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:text="Puntuacio"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:textSize="28sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtDificultatRanking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dificultat"
            android:layout_marginRight="30dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:textSize="28sp"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>
