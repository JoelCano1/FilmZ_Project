<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Un Layout simple que conté un textView-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp">

        <TextView
            android:fontFamily="@font/lora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gràcies per jugar"
            android:textColor="@color/white"
            android:textSize="100dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <!--Un Layout simple que conté un Button personalitzat
     per tonar a començar el joc-->
    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp">

        <Button
            android:id="@+id/BtnTornarJugar"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:text="Tornar a jugar"
            android:fontFamily="@font/robotoslab"
            android:textStyle="bold"
            android:textSize="60dp"
            android:textColor="@color/black"
            android:background="@drawable/button_redondejat"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"/>

    </LinearLayout>

    <!--Un Layout simple que conté un Button personalitzat
     per sortir del joc-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/BtnSortirApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sortir"
            android:textSize="60dp"
            android:paddingVertical="15dp"
            android:fontFamily="@font/robotoslab"
            android:textColor="@color/black"
            android:background="@drawable/button_redondejat"
            android:paddingHorizontal="30dp"/>

    </LinearLayout>

</LinearLayout>