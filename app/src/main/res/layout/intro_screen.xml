<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:layout_marginBottom="60dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:background="@drawable/boton_redondselct"
        android:text="@string/intro_screen_textIntroduccio"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="40dp"/>

    <Button
        android:id="@+id/btnTempsRestant"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:padding="20dp"
        android:text="@string/intro_screen_skip"
        android:fontFamily="@font/robotoslab"
        android:layout_marginBottom="100dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_redondejat"
        android:alpha="0.4"/>

</LinearLayout>