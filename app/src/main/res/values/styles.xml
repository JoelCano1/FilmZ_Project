<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textDefault">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="resultScreenTextGeneres">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="resultScreenSubtitolsNom">
        <item name="android:textSize">25dp</item>
        <item name="android:color">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/mavenpro</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="resultScreenButtons">
        <item name="android:background">@drawable/button_redondejat</item>
        <item name="android:textColor">@color/black</item>
